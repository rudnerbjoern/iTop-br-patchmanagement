                                <item id="fieldset:Server:patchmanagement" _delta="define">
                                    <rank>8</rank>
                                    <items>
                                        <item id="patchmethod_id">
                                            <rank>10</rank>
                                        </item>
                                    </items>
                                </item>
                            </items>
