        </class>
        <!-- ***************** Typology ***************** -->
        <class id="PatchMethod" _delta="define">
            <parent>Typology</parent>
            <properties>
                <category>bizmodel,searchable,configmgmt</category>
                <abstract>false</abstract>
                <key_type>autoincrement</key_type>
                <db_table>patchmethod</db_table>
                <db_key_field>id</db_key_field>
                <db_final_class_field />
                <naming>
                    <attributes>
                        <attribute id="name" />
                    </attributes>
                </naming>
                <display_template />
                <reconciliation>
                    <attributes>
                        <attribute id="name" />
                    </attributes>
                </reconciliation>
                <uniqueness_rules>
                    <rule id="name">
                        <attributes>
                            <attribute id="name" />
                        </attributes>
                        <filter />
                        <disabled>false</disabled>
                        <is_blocking>true</is_blocking>
                    </rule>
                </uniqueness_rules>
            </properties>
            <fields>
                <field id="description" xsi:type="AttributeText">
                    <sql>description</sql>
                    <default_value />
                    <is_null_allowed>true</is_null_allowed>
                </field>
                <field id="functionalci_list" xsi:type="AttributeLinkedSet">
                    <linked_class>FunctionalCI</linked_class>
                    <ext_key_to_me>patchmethod_id</ext_key_to_me>
                    <edit_mode>add_only</edit_mode>
                    <count_min>0</count_min>
                    <count_max>0</count_max>
                    <duplicates />
                </field>
            </fields>
            <methods />
            <presentation>
                <details>
                    <items>
                        <item id="name">
                            <rank>10</rank>
                        </item>
                        <item id="description">
                            <rank>20</rank>
                        </item>
                        <item id="functionalci_list">
                            <rank>100</rank>
                        </item>
                    </items>
                </details>
                <search>
                    <items>
                        <item id="name">
                            <rank>10</rank>
                        </item>
                        <item id="description">
                            <rank>20</rank>
                        </item>
                    </items>
                </search>
                <list>
                    <items>
                        <item id="description">
                            <rank>20</rank>
                        </item>
                    </items>
                </list>
            </presentation>
        </class>
